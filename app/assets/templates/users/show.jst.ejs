<div class="tab-v2">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#profile" data-toggle="tab">Profile</a></li>
    <li><a href="#reviews" data-toggle="tab">Reviews</a></li>
    <li><a href="#comments" data-toggle="tab">Comments</a></li>
  </ul>
</div>


 <div class="tab-content" style="padding-top: 10px">
   <div id="profile" class="tab-pane active">
    <div class="panel-body"> 
      <form class="form-horizontal"> 
            <div class="form-group"> 
              <label class="col-lg-3 control-label">Username</label> 
              <div class="col-lg-6"> 
                <input type="text" name="user[username]" value="<%= user.get('username')%>" placeholder="Username"  data-required="true" class="form-control parsley-validated"> 
              </div> 
            </div> 
            <div class="form-group"> 
              <label class="col-lg-3 control-label">Email</label> 
                <div class="col-lg-6"> 
                  <input type="text" name="user[email]" value="<%= user.get('email')%>" placeholder="test@example.com" class="bg-focus form-control parsley-validated" data-required="true" data-type="email"> 
                </div> 
            </div> 
            <div class="form-group"> 
              <label class="col-lg-3 control-label">Currently Playing</label> 
              <div class="col-lg-6"> 
                <input type="text" value="<%= user.get('currently_playing') %>" name="user[currently_playing]" placeholder="Currently Playing" class="bg-focus form-control"> 
                <div class="line line-dashed m-t-large"></div> 
              </div> 
            </div> 
            <div class="form-group"> 
              <div class="col-lg-9 col-lg-offset-3"> 
                <button type="submit" class="btn btn-primary">Save changes</button> 
              </div> 
            </div> 
      </form> 
    </div> 
   </div>
   <div id="reviews" class="tab-pane">
    <%reviews.each(function(review) { %>
      <div class="embedded" id="<%=review.get('id')%>"></div>
      <hr>
    <% }) %>
   </div>
   <div id="comments" class="tab-pane">
    <%comments.each(function(comment) { %>
      <div class="tag-box tag-box-v2">
          <p><%=comment.get('body')%></p>
      </div>
    <% }) %>
   </div>
</div>

